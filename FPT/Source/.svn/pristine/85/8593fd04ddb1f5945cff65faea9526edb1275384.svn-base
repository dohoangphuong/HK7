@model IEnumerable<CSS.ViewModels.SearchAgreementModel>
@{
    ViewBag.Title = "SearchAgreementResults";
    bool isFirst = true;
}
  <div id="results" class="results">
                <table class="table">
                    <thead>
                      <tr class="info">
                        <th>RFO Number</th>
                        <th>Customer</th>
                        <th>PostCode</th>
                        <th>CSM</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Agreement Number</th>
                        <th>Status</th>
                        <th>Select</th>
                      </tr>
                    </thead>
                         <tbody>
                           @foreach( var agreement in Model)
                            {
                              <tr class="active">
                                <td>@agreement.RFONumber</td>
                                <td>@agreement.Name</td>
                                <td>@agreement.PostCode</td>
                                <td>@agreement.CSM </td>
                                <td>@agreement.StartDate</td>
                                <td>@agreement.EndDate</td>
                                <td>@agreement.AgreementNumber</td>
                                <td>@agreement.AgreementStatus.AgreementStatus</td>
                                <td>@Html.RadioButtonFor(model => agreement.IsSelected, @agreement.AgreementNumber, new { @checked= (@isFirst?"checked": null)})</td>
                              </tr>
                           }
                            </tbody>
 
                    </table>
   </div>
