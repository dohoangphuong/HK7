using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Assignment3
{
    class Degree
    {
        /// <summary>
        /// Degree id
        /// </summary>
        private int intDegreeId;

        /// <summary>
        /// Degree name
        /// </summary>
        private string strDegreeName;
        public string DegreeName
        {
            get { return strDegreeName; }
            set { strDegreeName = value; }
        }

        /// <summary>
        /// staff's allowance
        /// </summary>
        private float fltAllowance;
        public float Allowance
        {
            get { return fltAllowance; }
            set { fltAllowance = value; }
        }

        /// <summary>
        /// the constructor of class
        /// </summary>
        /// <param name="id"></param>
        /// <param name="degreeName"></param>
        public Degree(int id, string degreeName, float allowance)
        {
            intDegreeId = id;
            strDegreeName = degreeName;
            fltAllowance = allowance;
        }
    }
}
