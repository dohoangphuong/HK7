                </tr>
                <tr>
                    <td>Agreement Number</td>
                    <td>@ViewBag.AgreementNumber</td>
                </tr>
                <tr>
                    <td>Agreement Name</td>
                    <td>@Html.TextBoxFor(model => model.Name, new { maxlength = 30})</td>
                </tr>
                <tr>
                    <td>Agreement Description</td>
                    <td>@Html.TextBoxFor(model => model.Description, new { maxlength = 300 })</td>
                </tr>
                <tr>
