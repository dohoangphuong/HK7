@model Service_Directory.Models.Department
<link href="~/Content/Stylesheets/form-input.css" rel="stylesheet" />

@using (Html.BeginForm("AmendDepartment", "Department", FormMethod.Post, new { @name = "" }))
{
    <div style="height:5%;">
        @Html.ActionLink("Back", "Index", "Department", new { @class = "Buton" })
        <input type="submit" name="btnSubmit" value="Save" style="float:right; width:85px; height:25px; margin-right: 30px;" />
        <input type="submit" name="btnSubmit" value="In-active"
               style="float:right; width:85px; height:25px; margin-right: 30px;"/>
    </div>

    <fieldset>
        <div class="container">
            <div class="left-container">
                <div class="formRowContainer" style="display:none">
                    <div class="labelContainer">Department ID <label style="color:red;">*</label></div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentID)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Department Name <label style="color:red;">*</label></div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentName)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Department Short Description <label style="color:red;">*</label></div>
                    <div class="valueContainer">@Html.TextAreaFor(d => d.DepartmentShortDescription, new { @class = "textarea" })</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Lead Contact</div>
                    <div class="valueContainer">
                        @Html.TextBox("leadContact", null, new { @disabled = "true" })
                        @Html.ActionLink("Lookup", null, null, new { @class = "link" })
                    </div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Copy Address from</div>
                    <div class="valueContainer">
                        @Html.RadioButton("addressfrom", 1, new { @class = "radio" })Organisation
                        @Html.RadioButton("addressfrom", 0, new { @class = "radio" })Parent
                    </div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Address Line 1</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentAddressLine1)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Address Line 2</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentAddressLine2)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Address Line 3</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentAddressLine3)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Postcode</div>
                    <div class="valueContainer">
                        @Html.TextBoxFor(d => d.DepartmentPostcode)
                        @Html.ActionLink("Lookup", "", "", new { @class = "link" })
                    </div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Town/Village/City</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentTownVillageCity)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">County</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentCounty)</div>
                </div>


                <div class="formRowContainer">
                    <div class="labelContainer">Nation/Country</div>
                    <div class="valueContainer">@Html.DropDownList("NationCountry", null, "Select Nation/Country", new { @id = "dropdownList" })</div>
                </div>
            </div>

            <div class="right-container">
                <div class="formRowContainer">
                    <div class="labelContainer">Type of Business a</div>
                    <div class="valueContainer">
                        @Html.TextBox("typeBusiness", null, new { @disabled = "true" })
                        @Html.ActionLink("Lookup", null, null, new { @class = "link" })
                    </div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">SIC Code</div>
                    <div class="valueContainer">@Html.TextBox("SICCode", null, new { @disabled = "true" })</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Department Full Description</div>
                    <div class="valueContainer">@Html.TextAreaFor(d => d.DepartmentFullDescription, new { @class = "textarea" })</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Phone Number</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentPhoneNumber)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Fax</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentFax)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Email</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentEmail)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Web Address</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DepartmentWebAddress)</div>
                </div>
            </div>
        </div>
    </fieldset>
}

