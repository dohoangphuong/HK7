@model Service_Directory.Models.SupportingMaterial
<link href="~/Content/Stylesheets/form-input.css" rel="stylesheet" />

@using (Html.BeginForm("AmendSupportingMaterials", "SupportingMaterials", FormMethod.Post, new { @name = "" }))
{
    <div style="height:5%;">
        @Html.ActionLink("Back", "Index", "SupportingMaterials", new { @class = "Buton" })
        <input class="submit" type="submit" name="btnSubmit" value="Save" @*style="float:right; width:80px; height:25px; margin-right: 30px;"*@ />
        <input class="submit" type="submit" name="btnSubmit" value="In-active"
               @*style="float:right; width:85px; height:25px; margin-right: 30px;"*@ />
    </div>
    
    <fieldset>
        <div class="container">
            <div class="left-container">
                <div class="formRowContainer">
                    <div class="formRowContainer" style="display:none;">                        
                        <div class="labelContainer">SupportingMaterials ID <label style="color:red;">*</label></div>
                        <div class="valueContainer">@Html.TextBoxFor(d => d.SupportingMaterialID)</div>
                    </div>
                    <div class="labelContainer">URL <label style="color:red;">*</label></div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.URL)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Description</div>
                    <div class="valueContainer">@Html.TextAreaFor(d => d.SupportingMaterialDescription, new { @class = "textarea" })</div>
                </div>

                <div class="formRowContainer">
                    <div class="labelContainer">Type</div>
                    <div class="valueContainer">@Html.DropDownList("Type", null, new { @id = "dropdownList" })</div>

                </div>
                
            </div>
            <div class="right-container">
                <div class="formRowContainer">
                    <div class="labelContainer">Added By</div>
                    <div class="valueContainer">@Html.TextBox("AddedBy", null, new { @disabled = "true" })</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Added Date</div>
                    <div class="valueContainer">@Html.TextBox("AddedDate", DateTime.Today.ToShortDateString(), new { @disabled = "true" })</div>
                </div>
            </div>
        </div>
    </fieldset>
}

