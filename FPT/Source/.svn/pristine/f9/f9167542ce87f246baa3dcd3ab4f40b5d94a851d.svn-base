using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Assignment3
{
    class Position
    {
        /// <summary>
        /// position id
        /// </summary>
        private int intPositionId;

        /// <summary>
        /// position name
        /// </summary>
        private string strPositionName;
        public string PositionName
        {
            get { return strPositionName; }
            set { strPositionName = value; }
        }

        /// <summary>
        /// staff's allowance
        /// </summary>
        private float fltAllowance;
        public float Allowance
        {
            get { return fltAllowance; }
            set { fltAllowance = value; }
        }

        /// <summary>
        /// the constructor of class
        /// </summary>
        /// <param name="id"></param>
        /// <param name="positionName"></param>
        public Position(int id, string positionName, float allowance)
        {
            intPositionId = id;
            strPositionName = positionName;
            fltAllowance = allowance;
        }
    }
}
