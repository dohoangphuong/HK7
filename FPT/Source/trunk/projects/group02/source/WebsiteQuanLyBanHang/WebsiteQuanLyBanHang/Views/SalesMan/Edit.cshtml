@model WebsiteQuanLyBanHang.Models.SalesMan

<div class="modal-header" style="background-color:coral" >
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Chỉnh sửa nhân viên</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SalesManID)

        <div class="form-group">
            <label class="col-sm-2 control-label">Tên</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.SalesManName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SalesManName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Địa chỉ</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Hạn mức</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.OverAmt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OverAmt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Trạng thái</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.Status,new List<SelectListItem>() { new SelectListItem { Text = "DE", Value = "DE" },
                                                                        new SelectListItem { Text = "AV", Value = "AV" },
                                                                        new SelectListItem { Text = "UA", Value = "UA" }}, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Mô tả</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-small btn-primary" />
                @Html.ActionLink("Canel", "Index", "", new { @class = "btn btn-small btn-primary" })
            </div>
        </div>
    </div>
}

