@model Service_Directory.Models.Directorate
<link href="~/Content/Stylesheets/form-input.css" rel="stylesheet" />

@using (Html.BeginForm("AmendDirectorate", "Directorates", FormMethod.Post, new { @name = "" }))
{
    <div style="height:5%;">
        @Html.ActionLink("Back", "Index", "Directorates", new { @class = "Buton" })
        <input type="submit" name="btnSubmit" value="Save" style="float:right; width:85px; height:25px; margin-right: 30px;" />
        <input type="submit" name="btnSubmit" value="In-active"
               style="float:right; width:85px; height:25px; margin-right: 30px;"/>
    </div>

    <fieldset>
        <div class="container">
            <div class="left-container">
                <div class="formRowContainer" style="display:none">
                    <div class="labelContainer">Directorate ID <label style="color:red;">*</label></div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateID)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Directorate Name <label style="color:red;">*</label></div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateName)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Directorate Short Description <label style="color:red;">*</label></div>
                    <div class="valueContainer">@Html.TextAreaFor(d => d.DirectorateShortDescription, new { @class = "textarea" })</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Lead Contact</div>
                    <div class="valueContainer">
                        @Html.TextBox("leadContact", null, new { @disabled = "true" })
                        @Html.ActionLink("Lookup", null, null, new { @class = "link" })
                    </div>
                </div>
                <div class="formRowContainer">                    
@*                    <div class="valueContainer">*@
                        @Html.CheckBox("Checkbox")                       
                  @*  </div>*@
                    <div class="labelContainer">Copy Address from Organisation </div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Address Line 1</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateAddressLine1)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Address Line 2</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateAddressLine2)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Address Line 3</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateAddressLine3)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Postcode</div>
                    <div class="valueContainer">
                        @Html.TextBoxFor(d => d.DirectorateStatus)
                        @Html.ActionLink("Lookup", "", "", new { @class = "link" })
                    </div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Town/Village/City</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateTownVillageCity)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">County</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateCountry)</div>
                </div>


                <div class="formRowContainer">
                    <div class="labelContainer">Nation/Country</div>
                    <div class="valueContainer">@Html.DropDownList("NationCountry", null, "Select Nation/Country", new { @id = "dropdownList" })</div>
                </div>
            </div>

            <div class="right-container">
                <div class="formRowContainer">
                    <div class="labelContainer">Type of Business a</div>
                    <div class="valueContainer">
                        @Html.TextBox("typeBusiness", null, new { @disabled = "true" })
                        @Html.ActionLink("Lookup", null, null, new { @class = "link" })
                    </div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">SIC Code</div>
                    <div class="valueContainer">@Html.TextBox("SICCode", null, new { @disabled = "true" })</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Department Full Description</div>
                    <div class="valueContainer">@Html.TextAreaFor(d => d.DirectorateFullDescription, new { @class = "textarea" })</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Phone Number</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectoratePhoneNumber)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Fax</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateFax)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Email</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateEmail)</div>
                </div>
                <div class="formRowContainer">
                    <div class="labelContainer">Web Address</div>
                    <div class="valueContainer">@Html.TextBoxFor(d => d.DirectorateWebAddress)</div>
                </div>
            </div>
        </div>
    </fieldset>
}

