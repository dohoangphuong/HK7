@model CSS_G06.Models.ConfirmationModel

<script>
    $(function () {
        $("#tabReview").tabs();
    });
    function submitUpdateStatus() {
        var agreementNumber1 = '@Model.AgreementNumber';
        var variantNumber1 = '@Model.VariantNumber';
        $.ajax({
            url: '@Url.Action("SubmitSaveAgreement", "ViewAgreement")',
            type: "GET",
            dataType: "json",
            data: { agreementNumber: agreementNumber1, variantNumber: variantNumber1 },
            success: function (data) {
                isSelected = true;
                document.getElementById("LabelSaveResultConfirmation").innerText = data;
                window.location.href = '@Url.Action("Index", "Home")';
            },
            error: function (data) {
                document.getElementById("LabelSaveResultConfirmation").innerText = data;
            }
        });
    };
    function saveAsDraftConfirmation() {
        var agreementNumber1 = '@Model.AgreementNumber';
        var variantNumber1 = '@Model.VariantNumber';
        $.ajax({
            url: '@Url.Action("SubmitSaveAsDraftAgreement", "ViewAgreement")',
            type: "GET",
            dataType: "json",
            data: { agreementNumber: agreementNumber1, variantNumber: variantNumber1 },
            success: function (data) {
                isSelected = true;
                document.getElementById("LabelSaveResultConfirmation").innerText = data;

            },
            error: function (data) {
                document.getElementById("LabelSaveResultConfirmation").innerText = data;
            }
        });
    };

    function printPage() {
        var header = "<table> <tr> <td>RFO Number</td> <td>@ViewBag.RFONumber</td></tr> " +
            "<tr><td >Customer Name</td><td>@ViewBag.CustomerName</td> </tr> <tr>" +
            "<td> Start - End </td><td>@ViewBag.StartEnd</td></tr><tr>" +
            "<td>Status</td><td>@ViewBag.Status</td></tr></table>";

        var data = $("#step-1").html() + $("#step-2").html() + $("#step-4").html();
        var title = "Agreement " + '@Model.AgreementNumber' + " / " + '@Model.VariantNumber';
        var mywindow = window.open('', 'Agreement print ' + title, 'height=600,width=800');

        mywindow.document.write('<html><head><title>' + title + '</title>');
        mywindow.document.write('</head><body >');
        mywindow.document.write(header + data);
        mywindow.document.write('</body></html>');

        mywindow.document.close();
        mywindow.focus();

        mywindow.print();
        mywindow.close();
        return true;
    };

</script>

