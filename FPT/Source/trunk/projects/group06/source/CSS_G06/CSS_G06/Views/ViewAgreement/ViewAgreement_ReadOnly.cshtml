@model CSS_G06.Models.SelectCustomer

@{
    ViewBag.Title = "View Agreement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/smart_wizard.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.0.0.min.js"></script>
<script src="~/Scripts/jquery.smartWizard.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#wizard').smartWizard({
            enableAllSteps: true
        });
    });
    $(document).on("pageload", function () {
        alert("pageload event fired - the external page has been successfully loaded and inserted into the DOM!");
    });

    function goBackward() {
        $('#wizard').smartWizard('goBackward');
    };
    function goFoward() {
        $('#wizard').smartWizard('goForward');
    };
    function goBackHome() {
        window.location.href = '@Url.Action("Index", "Home")';
    }

</script>

<style>
