        width:800px;
        height:420px;
        padding:5px;
        overflow-y:auto;
    }
    .ButtonView{
        width:800px;
        height:25px;
        padding:1px;
    }
    .ItemLeftLabel{
        width:180px;
        padding:2px;
        font-size:12px;
        font-weight:bold;
        color:black;
    }
    .ItemRightContent{
        width:600px;
        padding:2px;
        font-size:12px;
        font-weight:normal;
        color:#889EC7;
    }
    .ShowTableHeadTd{
        border: 1px solid black;
        font-size: 12px;
        font-weight:bold;
        color: whitesmoke;
        background-color:#889EC7;
        text-align:center;
        padding-left:5px;
        padding-right:5px;
        padding-bottom:1px;
        padding-top:1px;
    }
    .ShowTableContentTd{
