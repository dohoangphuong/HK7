@model IEnumerable<CMS.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Course", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { courseId = item.CourseId })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { courseId = item.CourseId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { courseId = item.CourseId })
            </td>
            <td>
                @Html.ActionLink("Add students", "AddStudents", new { courseId = item.CourseId })
            </td>
            <td>
                @Html.ActionLink("Remove students", "RemoveStudents", new { courseId = item.CourseId })
            </td>
        </tr>
    }
</table>